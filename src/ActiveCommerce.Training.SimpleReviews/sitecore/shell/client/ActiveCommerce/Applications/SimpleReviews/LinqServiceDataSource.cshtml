@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Web.UI.Controls.Common.UserControls
@model RenderingModel
@{
  var rendering = Html.Sitecore().Controls().GetUserControl(Model.Rendering);
  rendering.Class = "sc-LinqServiceDataSource";
  rendering.Requires.Script("client", "LinqServiceDataSource.js");

  rendering.Attributes.Add("data-sc-serviceUrl", rendering.GetString("ServiceUrl", "serviceUrl"));
  rendering.Attributes.Add("data-sc-where", rendering.GetString("Where", "where"));
  rendering.Attributes.Add("data-sc-sorting", rendering.GetString("Sorting", "sorting"));
  rendering.Attributes.Add("data-sc-pagesize", rendering.GetString("PageSize", "pageSize"));
  rendering.Attributes.Add("data-sc-pageindex", rendering.GetString("PageIndex", "pageIndex"));
  
  var htmlAttributes = rendering.HtmlAttributes;
}      
<div @htmlAttributes>
</div>
