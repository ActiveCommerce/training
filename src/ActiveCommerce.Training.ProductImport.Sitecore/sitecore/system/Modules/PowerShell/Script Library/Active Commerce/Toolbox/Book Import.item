field: {B1A94FF0-6897-47C0-9C51-AA6ACB80B1F0}
name: Script
key: script
content-length: 2835

$importPath = "$SitecoreDataFolder\productimports"
if (-not (Test-Path $importPath))
{
    New-Item $importPath -type directory   
}

$importFile = Receive-File -Path $importPath -Title "Book Data Import" -Description "Please provide the XML file containing book data."
[xml]$bookXml = Get-Content $importFile -Encoding UTF8
$books = $bookXml.catalog.book
$books | ft

$first = $books | select -first 1
if (-not $books -or -not $first.id -or -not $first.title)
{
    Show-Alert "This file does not appear to be a valid book XML."
    Remove-Item $importFile
    Exit
}

$result = Read-Variable -Parameters `
    @{ Name="ShopContext"; Title="Shop Name"; Options=(Get-AcSites -Dictionary) },
    @{ Name="ImportRoot"; Title="Import Root Item"; Tooltip="Location for any new products"; Root="/sitecore/commerce/products"; Editor="item" },
    @{ Name="ImportTemplate"; Title="Import Template"; Tooltip="Sitecore template for any new products"; Root="/sitecore/templates/producttypes"; Editor="item" } `
    -Description "Specify parameters for the product import" `
    -Title "Export Options" -Width 650 -Height 400 -OkButtonName "Start Import" -CancelButtonName "Abort" -ShowHints

Switch-AcShopContext -Site $ShopContext -ScriptBlock {
    foreach ($book in $books) {
        Write-Host "Importing $($book.id)"
        $item = $null
        $product = Get-AcProduct $book.id
        if ($product) {
            Write-Host "Found existing product!"
            $item = Get-Item master: -ID $product.ID
        } else {
            Write-Host "Product not found, will create."
            $itemName = [Sitecore.Data.Items.ItemUtil]::ProposeValidItemName($book.title, "Product")
            $item = New-Item -ItemType $ImportTemplate.Paths.FullPath -Name $itemName -Path $ImportRoot.ProviderPath
        }
        
        $item.Editing.BeginEdit()
        $item["Product Code"] =  $book.id
        $item["EAN"] = $book.id
        $item["SKU"] = $book.id
        $item["Title"] = $book.title
        $item["Genre"] = $book.genre
        $item["Short Description"] = $book.description.Trim()
        $item["Description"] = $book.description.Trim()
        $item["Author"] = $book.author
        $item["Weight"] = $book.weight
        $item["Publish Date"] = [Sitecore.DateUtil]::ToIsoDate((Get-Date -date $book.publish_date))
        
        #update pricing XML at /PriceMatrix/structure/categories/category[@id="Shop"]/items/item[@id="Normalprice"]/price
        [xml]$priceXml = $item["Price"]
        $priceXml.PriceMatrix.structure.categories.category | ? { $_.id -eq "Shop"} | % { $_.items.item } | ? { $_.id -eq "Normalprice" } | % { $_.price = $book.price }
        $item["Price"] = $priceXml.OuterXml
        
        $item.Editing.EndEdit() | Out-Null
    }
}





